import java.util.Scanner;
import java.util.Arrays;
public class Drawing {

	public static void main(String[] args) {
	Scanner keyboard = new Scanner(System.in);
	System.out.println("Indicate the number of stars (>1): ");
	final int numstar = keyboard.nextInt();
	keyboard.close();
	if (numstar <= 1){ //start if statement
		System.out.println("Invalid Input");
		System.exit(0);
			} //end if statement
	else { //start else statement
		char[] chars = new char[numstar];
		for (int a = numstar; a <= numstar; a--){ //start for loop
			chars[a] = ('*');
			System.out.print(chars);
			} //end for loop
		
		
		
		
	} //end of else statement
	

	
	
	
	
	
	
	
	
	
	} //end of main

} //end of class
